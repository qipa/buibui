<Window x:Name="mainWindow" x:Class="uwp_player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uwp_player"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Topmost="True" AllowsTransparency="True" WindowStyle="None" Foreground="{x:Null}">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </Window.Background>
    <Canvas x:Name="mCanvas" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" Width="525" Height="350"/>
</Window>
